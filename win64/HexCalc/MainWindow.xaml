<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="HexCalc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HexCalc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="MainWindow">

    <Grid>
        <StackPanel Margin="0,30,0,0" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox Name="NumInputTextBox" Width="200" Margin="0" TextChanged="NumInputTextBox_TextChanged" KeyDown="NumInputTextBox_KeyDown"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0" >
                <TextBlock Text="Decimal:" FontWeight="Bold" Margin="0,25,5,0"/>
                <TextBox Name="DecTextBox" IsReadOnly="True" Margin="5,20,10,20 " MinWidth="50" MinHeight="1"/>
                <TextBlock Text="Hex:" FontWeight="Bold" Margin="5,25,5,0"/>
                <TextBox Name="HexTextBox" IsReadOnly="True" Margin="5,20,10,20" MinWidth="50"/>
                <TextBlock Text="Binary:" FontWeight="Bold" Margin="5,25,5,0"/>
                <TextBox Name="BinTextBox" IsReadOnly="True" Margin="5,20,10,20" MinWidth="50"/>
            </StackPanel>
            <Button Content="Launch Bit Visualizer" Click="LaunchBitVisualizerButton_Click" Width="200" Margin="77,5,5,5"/>
        </StackPanel>
    </Grid>
</Window>
